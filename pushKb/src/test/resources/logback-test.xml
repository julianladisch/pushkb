<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="dcb-locate" level="DEBUG"/>
	<logger name="io.micronaut.http.client" level="TRACE"/>
	<logger name="io.micronaut.testresources.*" level="TRACE"/>
	<logger name="org.testcontainers.containers.*" level="TRACE"/>
	<logger name="co.elastic.clients.elasticsearch.ElasticsearchClient" level="TRACE"/>

	<root level="info">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>
